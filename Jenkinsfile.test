pipeline {
    agent {
        label('jenkins-jenkins-agent')
    }
    options {
        timeout(time: 30, unit: 'MINUTES')
        retry(2)
    }
    stages {
        stage('Test') {
            steps {
                echo 'Hello label'
                script {
                    sh '''
                        hostname
                        echo "Working directory: $(pwd)"
                    '''
                }
            }
        }   
    }
    post {
        always {
            echo 'Stage completed'
        }
    }
}